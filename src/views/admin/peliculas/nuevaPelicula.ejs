<%- include('../header') %>
<h1>Agregar nueva pelicula</h1>

<% if (typeof error !== 'undefined') { %>
<h4 style="color: #c62828"><%= error %></h4>
<% } %>

<form action="/admin/peliculas/nueva" method="POST">
  <div class="row">
    <div class="input-field col s12">
      <label for="nombre">Nombre:</label>
      <input
        type="text"
        id="nombre"
        name="nombre"
        class="input-field"
        required
      />
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <label for="resumen">Resumen:</label>
      <textarea id="resumen" class="materialize-textarea" name="resumen" required></textarea>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <label for="año">Año:</label>
      <input type="number" id="año" name="año" required />
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <label for="duracion">Duración (minutos):</label>
      <input type="number" id="duracion" name="duracion" required />
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <label for="idioma">Idioma:</label>
      <input type="text" id="idioma" name="idioma" required />
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <label for="director">Director:</label>
      <input type="text" id="director" name="director" required />
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <label for="costo">Costo:</label>
      <input type="number" step="0.01" id="costo" name="costo" required />
    </div>
  </div>

  <div class="row">
    <div class="input-field col s2">
      <button type="submit" class="waves-effect waves-teal btn green darken-1"><i
          class="material-icons left">add</i>Agregar pelicula</button>
    </div>
  
    <div class="input-field col s10">
      <a href="/admin/" style="color: #c62828">
        <i class="material-icons left">cancel</i>
        Cancelar
      </a>
    </div>
  </div>

</form>
<%- include('../../partials/footer') %>
